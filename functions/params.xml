<?xml version="1.0" encoding="UTF-8"?>
<params>
    <param name="colspec">
        <documentation>
            <summary>Under construction.</summary>
        </documentation>
        <options>
            <option name="hanging" type="integer">
                <documentation/>
            </option>
            <option name="items" type="boolean">
                <documentation/>
            </option>
            <option name="leftalign" type="boolean">
                <documentation/>
            </option>
            <option name="initial-prefix" type="string">
                <documentation/>
            </option>
            <option name="nil" type="string">
                <documentation/>
            </option>
            <option name="split" type="string">
                <documentation/>
            </option>
            <option name="width" type="string"
                pattern="^\*|(\*)?\d+$"
                patternExplanation="The value must be an integer number, or a number preceded by a * 
                character, or only a * character. A number means a width equal to the number; 
                a number preceded * means a width which is the minimum of the number and the
                maximum string length occurring in the column; a * means a width equal to the
                maximum string length.">
                <documentation>Column width.</documentation>
            </option>
        </options>
    </param>
</params>
