<?xml version="1.0" encoding="UTF-8"?>
<ispace>
    <!-- ======== 
         Grammars 
         ======== -->
    <grammars baseURI="../grammar">
        <grammar name="css" uri="css.ixml" type="ixml"/>
        <grammar name="isbn" uri="isbn.ixml" type="ixml"/>        
        <grammar name="iso8601" uri="iso8601.ixml" type="ixml"/>
        <grammar name="words" uri="words.ixml" type="ixml"/>
        <grammar name="xpath31" uri="xpath31.ixml" type="ixml"/>
    </grammars>
    
    <!-- ============== 
         Resource types 
         ============== -->
    <rtypes>
        <rtype name="xml">
            <docFn>doc#1</docFn>
            <parseFn>parse-xml#1</parseFn>            
        </rtype>
        <rtype name="json">
            <docFn>json:doc#1</docFn>
            <parseFn>json:parse#1</parseFn>            
        </rtype>
        <rtype name="html">
            <docFn>html:doc#1</docFn>
            <parseFn>html:parse#1</parseFn>            
        </rtype>
        <rtype name="csv">
            <docFn>csv:doc#2</docFn>
            <parseFn>csv:parse#2</parseFn>            
        </rtype>
        <rtype name="docx">
            <docFn>docx:doc#1</docFn>
        </rtype>
        <rtype name="css">
            <grammar ref="css" type="ixml"/>
        </rtype>
        <rtype name="isbn.ixml">
            <grammar ref="isbn" type="ixml"/>
        </rtype>
        <rtype name="iso8601.ixml">
            <grammar ref="iso8601" type="ixml"/>
        </rtype>
        <rtype name="words.ixml">
            <grammar ref="words"/>
        </rtype>
    </rtypes>
    <!-- ==================
         Resource type uses 
         ================== -->
    <rtypeUses>
        <!-- .xml etc. -->
        <case>
            <condition>
                <file name="*.dita *.ditamap *.docbook *.nvdl *.odd *.tei *.xml *.xsd *.xsl *.xslt"/>
            </condition>
            <rtypeUse rtype="xml" final="no"/>
            <rtypeUse rtype="html" final="yes"/>
        </case>
        <!-- *.json -->
        <case>
            <condition>
                <file name="*.json *.jsonld *.jschema *.jsonschema"/>
            </condition>
            <rtypeUse rtype="json" final="no"/>            
        </case>
        <!-- *.html *.htm -->
        <case>
            <condition>
                <file name="*.html *.htm"/>
            </condition>
            <rtypeUse rtype="xml"/>              <!-- try to parse as XML -->
            <rtypeUse rtype="html" final="yes"/> <!-- parse as HTML -->
        </case>
        <!-- *.docx -->
        <case>
            <condition>
                <file name="*.docx"/>
            </condition>
            <rtypeUse rtype="docx" final="no"/>            
        </case>
        <!-- *.csv -->
        <case>
            <condition>
                <file name="*.csv"/>
            </condition>
            <case>
                <condition>
                    <file parentName="data.sem"/>
                </condition>
                <rtypeUse rtype="csv">
                    <options>
                        <option name="separator" value=";"/>
                    </options>
                </rtypeUse>
            </case>
            <case>
                <condition>
                    <file parentName="data.head"/>
                </condition>
                <rtypeUse rtype="csv">
                    <options>
                        <option name="header" value="yes"/>
                    </options>
                </rtypeUse>
            </case>
            <case>
                <rtypeUse rtype="csv">
                    <options>
                        <option name="header" value="no"/> 
                        <option name="separator" value=","/>
                    </options>                        
                </rtypeUse>
            </case>
        </case>
        <!-- *.words.txt -->
        <case>
            <condition>
                <file name="*words*.txt"/>
            </condition>
            <rtypeUse rtype="words.ixml" final="yes"/>
        </case>
        <!-- *.isbn*.txt -->
        <case>
            <condition>
                <file name="isbn*.txt"/>
            </condition>
            <rtypeUse rtype="isbn.ixml" final="yes"/>
        </case>
        <!-- *.iso8601*.txt -->
        <case>
            <condition>
                <file name="iso8601*.txt"/>
            </condition>
            <rtypeUse rtype="iso8601.ixml" final="yes"/>
        </case>
        <!-- Last attempt - parse as XML -->
        <case>
            <rtypeUse rtype="xml"/>
        </case>
    </rtypeUses>
</ispace>
